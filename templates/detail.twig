<!doctype html>
<html lang="en">
  {% include 'partials/head.twig' %}
  <body>
    {% include 'partials/navigation.twig' %}
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          {% if detail.images | length == 1 %}
            {% for image in detail.images %}
              <img src="images/products/{{image}}" class="img-fluid">
            {% endfor %}
          {% else %}
            <div class="carousel slide" data-ride="carousel" id="detail-carousel">
              <div class="carousel-inner">
                {% for image in detail.images %}
                  {% set active = (loop.index == 1) ? 'active' : '' %}
                  <div class="carousel-item {{active}}">
                    <img src="images/products/{{image}}" class="img-fluid">
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endif %}
        </div>
        <div class="col-md-6">
          <h3>{{detail.product.name}}</h3>
          <h5 class="price">{{detail.product.price}}</h5>
          <form id="add-form" class="form-inline">
            <input type="hidden" value="{{detail.product.product_id}}" name="product_id">
            <input type="number" name="quantity" value="1" min="1">
            <button class="btn btn-primary" name="action" value="cart">Add to Cart</button>
            <button class="btn btn-primary" name="action" value="wish">Add to Wishlist</button>
          </form>
          <p>{{detail.product.description}}</p>
        </div>
      </div>
    </div>
    {% include 'partials/footer.twig' %}
  </body>
</html>